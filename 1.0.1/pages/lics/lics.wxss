/* pages/lics/lics.wxss */
.inpt{
  width: 100%;
  padding-bottom: 30px;
}
.commonTit{
  padding: 30rpx 0;
}
.commonTit text{
  padding-left: 20px;
  border-left: 5px solid #6596f3;
}
.section{
  width: 80%;
  margin: 10px auto;
  background-color: #fff;
  height: 42px;
  position: relative;
}
.sexInpt{
  height: 42px;
  line-height: 42px;
  padding-left: 20px;
  padding-right: 20px;
  font-size: 14px;
  color: #333;
}
.select{
  position: absolute;
  right: 15px;
  top: 17px;
  width: 15px;
  height: 8px;
}
.section button{
 background: linear-gradient(to right,#6a9ff8, #3d5cd8);
 color: #fff;
 margin-top: 48rpx;
}
.adviser{
  width: 100%;
}
.adviserList{
  width: 100%;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  padding-top:15px;
  background-color: #fff;
}
.adviserMess{
  width:50%;
  display: flex;
  text-align: center;
  flex-flow: column;
  box-sizing: border-box;
  padding: 20px 0;
  border-right: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}
.adviseImg{
  margin: 0 auto;
  width: 90px;
  height: 60px;
}
.adviserMess text{
  font-size: 14px;
  color: #999;
  padding-top: 10px;
}